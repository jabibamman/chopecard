<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/body_padding"
        android:background="@color/body_background">

    <ImageView
            android:id="@+id/imageViewCard"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginTop="@dimen/image_margin_top"
            android:layout_weight="2"
            android:src="@drawable/placeholder_image" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/card_info_padding">

        <TextView
                android:id="@+id/textViewCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/primaryColor" />

        <TextView
                android:id="@+id/textViewCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/secondaryColor" />

        <!-- more textViews for other card attributes like frameType, desc, etc. -->

    </LinearLayout>
</LinearLayout>
